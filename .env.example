# StudyAI – Environment Template
# Copy to .env and fill in real values. Do not commit .env.

# ── Database (Neon Serverless Postgres) ─────────────────────────────
neon_db_api_key=postgresql://user:pass@host/dbname?sslmode=require

# ── JWT Auth ───────────────────────────────────────────────────────
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ── LLM Provider: "ollama" | "openrouter" ──────────────────────────
LLM_PROVIDER=ollama

# Ollama (local or Ollama Cloud)
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_MODEL=gpt-oss:120b-cloud
OLLAMA_API_KEY=

# OpenRouter (alternative)
# OPENROUTER_API_KEY=
# OPENROUTER_MODEL=gpt-oss:120b-cloud

# ── Production ─────────────────────────────────────────────────────
DEV_AUTO_LOGIN_ENABLED=false
